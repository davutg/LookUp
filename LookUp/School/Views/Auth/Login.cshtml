@model School.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="col-md-6 jumbotron">
    <form method="post">
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-muted"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-muted"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Login" />
        </div>
    </form>
</div>

<ul class="col-md-12 list-group">
    @{
        if (ViewBag.ModelState != null)
        {
            foreach (var item in ViewBag.ModelState.Values)
            {
                if (item.Errors!=null)
                {
                    foreach (var error in item.Errors)
                    {
                        <li class="list-group-item-danger text-danger">@error.ErrorMessage</li>                        
                    }
                }

            }
        }
    }

</ul>